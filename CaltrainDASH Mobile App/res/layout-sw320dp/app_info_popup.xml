<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_app_layout" 
    android:background="@color/popover_screen_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    
    <LinearLayout 
        android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/darker_grey"
    android:padding="@dimen/activity_padding"
    android:layout_centerInParent="true" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_padding"
        android:text="@string/about_app"
        android:textSize="22sp"
        android:textColor="@color/main_blue"
        android:gravity="center"/>
    <View
    	android:layout_height="1dp"
    	android:layout_width="fill_parent"
    	android:background="@color/main_blue"
    	android:layout_marginBottom="@dimen/activity_vertical_margin" />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_app_text"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="left" />
    <TextView 
        android:id="@+id/design_contributor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/design_contributor_link"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="left" />
    
    <Button
        android:id="@+id/about_info_close"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/close"
		android:textColor="@color/white"
		android:padding="@dimen/button_padding"
		android:layout_marginTop="@dimen/activity_vertical_margin" />       
    

</LinearLayout>
</RelativeLayout>